  target 'Movie KillerTests' do
    inherit! :search_paths
    # Pods for testing

    pod 'RxBlocking', '~> 3.0'
    pod 'RxTest',     '~> 3.0'

    pod 'Quick'
    pod 'Nimble'
  end

  target 'Movie KillerUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
